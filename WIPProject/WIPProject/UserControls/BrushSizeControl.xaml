<UserControl x:Class="WIPProject.UserControls.BrushSizeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WIPProject.UserControls"
             mc:Ignorable="d" d:DesignWidth="300" Height="40">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Slider Minimum="1" Maximum="80" SmallChange="1" LargeChange="2" IsSnapToTickEnabled="True" x:Name="sldBrushSize" Grid.Column="1" Margin="5,0" VerticalAlignment="Center"/>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Size" Margin="0" FontFamily="Maiandra GD" FontWeight="Bold" Foreground="White" FontSize="8" Padding="0,0,5,0"/>
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="{Binding Path=Value, ElementName=sldBrushSize}" Background="Transparent" BorderBrush="#00ABADB3" FontFamily="Maiandra GD" FontWeight="Bold" Foreground="White" FontSize="8"/>

    </Grid>
</UserControl>
