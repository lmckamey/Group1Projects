<UserControl x:Class="WIPProject.UserControls.BasicDrawingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WIPProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid x:Name="grdDrawWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Margin="0" Grid.Row="1" Orientation="Horizontal">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF7A7A7A" Offset="0.008"/>
                        <GradientStop Color="#FF323232" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <Ellipse x:Name="elpCurrentColor" Fill="#FFF4F4F5" Height="30" Stroke="White" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <local:ColorPickerControl Height="40" Margin="0,2,0,1" Width="104"></local:ColorPickerControl>
            </StackPanel>
            <Canvas x:Name="cnvDrawArea" Margin="0" Background="White"/>
        </Grid>

    </Grid>
</UserControl>
